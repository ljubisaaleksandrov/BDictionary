@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header"><h1>Roles Administration</h1></div>
<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4">
                @using (Html.BeginForm("Create", "RolesAdmin", FormMethod.Post, new{role="form"}))
                {
                    @Html.AntiForgeryToken()
                    <div class="widget-box">
                        <div class="widget-header"><h4 class="widget-title">Create new role</h4></div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <input type="text" name="Name" class="form-control left" placeholder="Role name" />
                                <button type="submit" class="btn btn-primary left">Add</button>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4">
                @if (!Model.Any())
                {
                    <span>There are no roles available. Click on <strong>Create</strong> button to start adding new roles.</span>
                }
                <table class="table table-striped table-bordered" id="AdminTable">
                    <thead class="thead-default">
                        <tr>
                            <th>
                                <i class="glyphicon glyphicon-user"></i> Role
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td>
                                    <div class="hidden-sm btn-group">
                                        <a class="btn btn-xs btn-info" href="@Url.Action("Edit", "RolesAdmin", new { id = role.Id })"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a class="btn btn-xs btn-danger" href="@Url.Action("Delete", "RolesAdmin", new { id = role.Id })"><i class="glyphicon glyphicon-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
